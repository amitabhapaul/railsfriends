
<div class="container">
<br/>
<br/>
  <div class="jumbotron">
    <h1 class="display-4">
      <%=@friend.first_name%>
      <%=@friend.last_name%>
    </h1>
    <p class="lead">
      <%=@friend.email%> | 
      <%=@friend.phone%> | 
      <%=@friend.twitte%>
    </p>
    <hr class="my-4">  

    <div style="width:600px;">
      <div class="row">
        <div class="col">
          <%=link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-primary" %>
        </div>
        <div class="col">
          <%=link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
        </div>
        <div class="col">
          <%=button_to "Destroy this friend", @friend, method: :delete, class:"btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>




